@model IEnumerable<HospitalManagementSystem.Models.Surgery>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Surgery</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SurgeryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurgeryTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Outcome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SurgeryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurgeryTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Outcome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.FirstName)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.SurgeryID">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.SurgeryID">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.SurgeryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
