@model IEnumerable<HospitalManagementSystem.Models.MedicalRecord>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Allergies)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalHistory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentMedications)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Immunizations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Allergies)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalHistory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentMedications)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Immunizations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.FirstName)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.MedicalRecordID">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.MedicalRecordID">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.MedicalRecordID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
