
@model IEnumerable<HospitalManagementSystem.Models.Doctor>

@{
    ViewData["Title"] = "Doctors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Doctors</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Doctor</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Specialty</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Hospital</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Specialty</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Hospital?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DoctorID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.DoctorID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
