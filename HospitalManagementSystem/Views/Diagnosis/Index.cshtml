@model IEnumerable<HospitalManagementSystem.Models.Diagnosis>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Diagnosis</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Diagnosis</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Description</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DiagnosisID</td>
                <td>@item.Patient.FirstName @item.Patient.LastName</td>
                <td>@item.Doctor.FirstName @item.Doctor.LastName</td>
                <td>@item.Description</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DiagnosisID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.DiagnosisID" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.DiagnosisID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

