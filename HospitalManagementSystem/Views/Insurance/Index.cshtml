@model IEnumerable<HospitalManagementSystem.Models.Insurance>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Insurance Policies</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Insurance</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Provider</th>
            <th>Policy Number</th>
            <th>Coverage Details</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Patient.FirstName</td>
                <td>@item.Provider</td>
                <td>@item.PolicyNumber</td>
                <td>@item.CoverageDetails</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.InsuranceID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.InsuranceID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.InsuranceID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
