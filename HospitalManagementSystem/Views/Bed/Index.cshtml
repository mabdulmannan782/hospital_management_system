@model IEnumerable<HospitalManagementSystem.Models.Bed>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bed List</h2>
<a asp-action="Create" class="btn btn-primary">Create New Bed</a>
<table class="table table-bordered">
    <tr>
        <th>Bed ID</th>
        <th>Room ID</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BedID</td>
            <td>@item.RoomID</td>
            <td>@item.Status</td>
            <td>
                <a asp-action="Edit"class="btn btn-primary" asp-route-id="@item.BedID">Edit</a> |
                <a asp-action="Delete"class="btn btn-danger" asp-route-id="@item.BedID">Delete</a>
            </td>
        </tr>
    }
</table>

